#!/bin/bash

# fail fast
set -o errexit
set -o nounset
set -o pipefail

scriptname=$(basename $0)

cat <<EOT
---
packages:
EOT

# Don't require any packages for Heroku's Cedar platform (Ubuntu 10.04)
if [ -f /etc/debian_version ]
then
  case "$(head -n1 /etc/debian_version)" in
    squeeze/sid)
      exit 0
      ;;
  esac
fi

cat <<EOT
  - autoconf
  - bind9-host
  - bison
  - build-essential
  - coreutils
  - curl
  - daemontools
  - dnsutils
  - ed
  - imagemagick
  - iputils-tracepath
  - language-pack-en
  - libbz2-dev
  - libcurl4-openssl-dev
  - libevent-dev
  - libglib2.0-dev
  - libjpeg-dev
  - libmagickcore-dev
  - libmysqlclient-dev
  - libncurses5-dev
  - libpq-dev
  - libreadline6-dev
  - libssl-dev
  - libxml2-dev
  - libxslt-dev
  - netcat-openbsd
  - openssh-client
  - openssh-server
  - openssl
  - socat
  - tar
  - telnet
  - zlib1g-dev
EOT
